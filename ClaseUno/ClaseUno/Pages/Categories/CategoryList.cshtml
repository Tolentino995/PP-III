@page
@model ClaseUno.Pages.Categories.CategoryListModel
@{
}

<h1>Lista de Contactos</h1>
<p>
    <a asp-page="Create" class="btn btn-primary">Crear Nuevo Contacto</a>
</p>
<form>
    <p>
        Buscar por Nombre: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Buscar" class="btn btn-sm btn-secondary" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Categories[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Categories[0].Email)</th>
            <th>@Html.DisplayNameFor(model => model.Categories[0].Phone)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a>|
                    <a asp-page="./Details" asp-route-id="@item.Id">Detalles</a>|
                    <a asp-page="./Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>