@page
@model ClaseUno.Pages.Contacts.DetailsModel

<h1>Detalles del Cliente</h1>

@if (Model.Contact != null)
{
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Contact.Id</dd>
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Contact.Name</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Contact.Email</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Contact.Phone</dd>
    </dl>
}
else
{
    <p>Cliente no encontrado.</p>
}

<a asp-page="./Index" class="btn btn-secondary">Volver a la Lista</a>
